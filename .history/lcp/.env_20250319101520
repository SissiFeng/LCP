# LCP Environment Variables Example
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development

# MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/lcp
DB_NAME=lcp

# Security
JWT_SECRET=workflow-management-dev-secret
API_KEY_ENABLED=false 
